<div class="poll-form">
  <h2>New Poll</h2>
  <%= form_for @poll, poll_path(@conn, :create), fn f ->  %>
    <label>
      Title: <br />
      <%= text_input f , :title %>      
    </label>
    <label>
      Options (seperated by commas): <br />
      <input type="text" name="options" />
    </label>
    <%= submit "Create" %>
  <% end %>
</div>